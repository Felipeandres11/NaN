<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Photo:</strong>
  <%= @post.photo %>
</p>

<% @post.comments.each do |comentarios|%>
  <p><strong>Comentarios</strong>
  <%= comentarios.comment %></p>
<% end %>




<%= form_with(model: [@post, @post.comments.build], local: true) do |form| %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
